<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="bg_item_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/spacing_xxlarge</item>
        <item name="android:background">@drawable/bg_white_solid_gray_border_5_radius</item>
    </style>

    <style name="iv_icon_item_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">@dimen/fs_15</item>
    </style>

    <style name="title_item_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/fs_15</item>
        <item name="android:layout_marginBottom">@dimen/fs_12</item>
        <item name="android:textColor">@color/c_2d2d2d</item>
        <item name="android:textSize">@dimen/ts_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="et_item_input">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@null</item>
        <item name="android:ellipsize">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:scrollHorizontally">true</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorHint">@color/c_9b9b9b</item>
        <item name="android:textCursorDrawable">@null</item>
        <item name="android:layout_marginStart">@dimen/fs_15</item>
        <item name="android:textSize">@dimen/ts_12</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="iv_clear_item_input">
        <item name="android:layout_width">@dimen/fs_46</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentEnd" tools:ignore="NewApi">true</item>
        <item name="android:scaleType">centerInside</item>
        <item name="android:src">@drawable/ic_clear_text</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="tv_error_item_input">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_b21225</item>
        <item name="android:layout_marginTop">@dimen/fs_3</item>
        <item name="android:textSize">@dimen/ts_12</item>
        <item name="android:layout_marginBottom">@dimen/fs_3</item>
        <item name="android:visibility">invisible</item>
    </style>

    <style name="tv_ts_12_c_2d2d2d_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_2d2d2d</item>
        <item name="android:textSize">@dimen/ts_12</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_ts_15_c_white_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">@dimen/ts_15</item>
        <item name="android:textStyle">bold</item>

    </style>

    <style name="tv_ts_15_c_2d2d2d_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_2d2d2d</item>
        <item name="android:textSize">@dimen/ts_15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_ts_15_c_black_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textSize">@dimen/ts_15</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_ts_16_c_accent_dark_bold">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorPrimaryDark</item>
        <item name="android:textSize">@dimen/ts_16</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="tv_ts_16_c_2d2d2d_regular">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/c_2d2d2d</item>
        <item name="android:textSize">@dimen/ts_16</item>
    </style>

    <style name="ExpandedTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">25sp</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="CollapsedTitle" parent="@android:style/TextAppearance">
        <item name="android:textSize">@dimen/fs_18</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:background">@android:color/black</item>
    </style>

    <style name="EditText.Grey" parent="@style/AppTheme">
        <item name="colorControlActivated">@color/grey_60</item>
        <item name="colorControlHighlight">@color/grey_60</item>
        <item name="colorControlNormal">@color/grey_40</item>
    </style>
    <style name="Button.Primary.Borderless" parent="@style/Widget.AppCompat.Button.Borderless.Colored">
        <item name="android:textColor">@color/colorPrimaryDark</item>
    </style>

    <style name="Checkbox.Primary" parent="@style/AppTheme">
        <item name="colorPrimary">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlActivated">@color/colorPrimaryDark</item>
        <item name="colorControlHighlight">@color/colorPrimaryDark</item>
        <item name="colorControlNormal">@color/grey_80</item>
    </style>

    <!--style for ripple library-->
    <style name="RippleStyleWhite">
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">#80FFFFFF</item>
        <item name="mrl_rippleHover">true</item>
        <item name="mrl_rippleAlpha">0.2</item>
    </style>

    <style name="RippleStyleBlack" parent="RippleStyleWhite">
        <item name="mrl_rippleColor">#8096989A</item>
    </style>

</resources>
