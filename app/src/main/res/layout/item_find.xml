<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spacing_medium"
        android:layout_weight="1"
        android:id="@+id/item_find_container"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="2dp"
        app:cardElevation="2dp">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:padding="@dimen/fs_10"
            android:layout_height="wrap_content">

        <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/item_find_iv_user"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_gravity="center_vertical"
                app:srcCompat="@drawable/ic_person_grey"
                app:civ_shadow="true"
                app:civ_shadow_radius="0"
                app:civ_border="true"
                app:civ_border_width="1dp"
                app:civ_border_color="@color/grey_80"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fs_20"
                android:layout_marginEnd="@dimen/fs_10"
                android:orientation="vertical">

            <TextView
                    android:id="@+id/item_find_tv_name"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_16"
                    android:text="Nguyen Tan Linh"
                    android:layout_marginBottom="@dimen/fs_5"
                    android:fontFamily="@font/axis_std_bold"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>

            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:paddingTop="@dimen/fs_3"
                    android:paddingBottom="@dimen/fs_3"
                    android:gravity="center_vertical"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:tint="@android:color/white"
                        app:srcCompat="@drawable/ic_phone"/>

                <TextView
                        android:id="@+id/item_find_tv_phone"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:text="0988422495"
                        android:padding="@dimen/fs_5"
                        android:fontFamily="@font/axis_std_regular"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                    android:layout_marginTop="@dimen/fs_5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/item_find_time_start"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/ts_14"
                            android:fontFamily="@font/axis_std_regular"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/ts_12"
                            android:text="Bắt đầu"
                            android:fontFamily="@font/axis_std_regular"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    <TextView
                            android:id="@+id/item_find_time_end"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/ts_14"
                            android:fontFamily="@font/axis_std_regular"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content"/>

                    <TextView
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/ts_12"
                            android:text="Kết thúc"
                            android:fontFamily="@font/axis_std_regular"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content"/>

                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>