<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true"
        tools:context=".MainActivity">

    <android.support.design.widget.AppBarLayout
            android:id="@+id/appbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
                android:id="@+id/frg_club_info_collapsing_toolbar"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="false"
                android:descendantFocusability="blocksDescendants"
                app:collapsedTitleTextAppearance="@style/CollapsedTitle"
                app:expandedTitleTextAppearance="@style/ExpandedTitle"
                app:title="Brothers FC"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorAccent"
                    android:height="@dimen/fs_250"
                    android:clickable="false"
                    app:layout_collapseMode="parallax"/>

            <ImageView
                    android:id="@+id/frg_club_info_iv_logo"
                    android:layout_width="match_parent"
                    android:height="@dimen/fs_250"
                    android:paddingTop="@dimen/fs_46"
                    android:scaleType="centerCrop"
                    android:clickable="false"
                    android:src="@drawable/ic_picture"
                    android:layout_height="match_parent"/>

            <android.support.v7.widget.Toolbar
                    android:id="@+id/frg_club_info_toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/fs_46"
                    android:background="?attr/colorPrimary"
                    android:elevation="4dp"
                    app:navigationIcon="@drawable/ic_back_white"
                    app:layout_collapseMode="pin"
                    tools:ignore="UnusedAttribute"/>
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>

    <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/fs_20"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/fs_10"
                android:orientation="vertical">

            <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                <ImageView
                        android:id="@+id/frg_club_info_iv_player"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="@dimen/fs_10"
                        android:src="@drawable/ic_list"/>
                <TextView
                        android:layout_toEndOf="@+id/frg_club_info_iv_player"
                        android:layout_centerVertical="true"
                        style="@style/tv_ts_15_c_black_bold"
                        android:text="Cầu thủ"/>

                <LinearLayout
                        android:id="@+id/frg_club_info_v_join_club"
                        android:layout_width="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:paddingStart="@dimen/fs_10"
                        android:paddingEnd="@dimen/fs_10"
                        android:paddingTop="@dimen/fs_5"
                        android:paddingBottom="@dimen/fs_5"
                        android:gravity="center_vertical"
                        android:background="@drawable/bg_accent_solid_no_border_30_radius"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/fs_5"
                            android:src="@drawable/ic_plus"/>
                    <TextView
                            style="@style/tv_ts_14_c_white_regular"
                            android:text="@string/join_club"/>

                </LinearLayout>

            </RelativeLayout>

            <android.support.v7.widget.RecyclerView
                    android:layout_marginTop="@dimen/fs_10"
                    android:layout_marginBottom="@dimen/fs_10"
                    android:background="@drawable/bg_transparent_solid_gray_border_5_radius"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

            </android.support.v7.widget.RecyclerView>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</android.support.design.widget.CoordinatorLayout>