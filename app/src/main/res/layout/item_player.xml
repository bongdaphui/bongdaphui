<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/bg_blue_5_radius"
        android:elevation="@dimen/fs_5"
        android:layout_margin="@dimen/fs_10"
        android:layout_height="wrap_content"
        tools:ignore="UnusedAttribute">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/fs_20"
            android:layout_marginTop="@dimen/fs_10"
            android:layout_marginLeft="@dimen/fs_20"
            android:orientation="horizontal">

        <FrameLayout
                android:layout_width="@dimen/fs_71"
                android:background="@drawable/bg_oval_solid_transparent_border_white"
                android:layout_height="@dimen/fs_71">

            <ImageView
                    android:id="@+id/item_member_image"
                    android:layout_width="@dimen/fs_70"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/fs_70"/>
        </FrameLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fs_20"
                android:layout_marginEnd="@dimen/fs_20"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/fs_20">

            <TextView
                    android:id="@+id/item_member_name"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_16"
                    android:text="Nguyen Tan Linh"
                    android:layout_marginBottom="@dimen/fs_5"
                    android:fontFamily="@font/axis_std_bold"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/item_member_position"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_14"
                    android:text="Trung vệ"
                    android:fontFamily="@font/axis_std_regular"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>


        </LinearLayout>

    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginEnd="@dimen/fs_20"
            android:layout_marginBottom="@dimen/fs_10"
            android:layout_marginLeft="@dimen/fs_110"
            android:layout_marginRight="@dimen/fs_20">

        <TextView
                android:id="@+id/item_member_clother_number"
                android:layout_width="@dimen/fs_110"
                android:textSize="@dimen/ts_16"
                android:text="5"
                android:layout_marginTop="@dimen/fs_10"
                android:gravity="center"
                android:fontFamily="@font/axis_std_bold"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/item_member_height"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_14"
                    android:text="178cm"
                    android:layout_marginBottom="@dimen/fs_3"
                    android:fontFamily="@font/axis_std_regular"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_12"
                    android:text="Chiều cao"
                    android:fontFamily="@font/axis_std_regular"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/item_member_weight"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_14"
                    android:text="68Kg"
                    android:layout_marginBottom="@dimen/fs_3"
                    android:fontFamily="@font/axis_std_regular"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_12"
                    android:text="Cân nặng"
                    android:fontFamily="@font/axis_std_regular"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>

        </LinearLayout>

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="end"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <TextView
                    android:id="@+id/item_member_dob"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_14"
                    android:text="1990"
                    android:layout_marginBottom="@dimen/fs_3"
                    android:fontFamily="@font/axis_std_regular"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_12"
                    android:text="Ngày sinh"
                    android:fontFamily="@font/axis_std_regular"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>