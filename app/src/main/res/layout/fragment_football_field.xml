<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:focusable="true">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <android.support.v7.widget.RecyclerView
                android:id="@+id/fragment_football_field_rcv_field"
                android:layout_width="match_parent"
                tools:listitem="@layout/item_club"
                android:scrollbars="vertical"
                app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                android:layout_height="match_parent"/>

        <TextView
                android:id="@+id/fragment_football_field_tv_no_data"
                android:layout_width="wrap_content"
                android:fontFamily="@font/axis_std_regular"
                android:textColor="@color/c_2d2d2d"
                android:text="Không có dữ liệu"
                android:textSize="@dimen/ts_16"
                android:visibility="gone"
                android:layout_centerInParent="true"
                android:layout_height="wrap_content"/>

        <android.support.design.widget.FloatingActionButton
                android:id="@+id/fragment_football_field_fab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_plus"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="16dp"
                android:visibility="gone"
                android:layout_alignParentRight="true" tools:ignore="RtlHardcoded"/>
    </RelativeLayout>

    <include layout="@layout/view_bottom_filter"/>

</android.support.design.widget.CoordinatorLayout>