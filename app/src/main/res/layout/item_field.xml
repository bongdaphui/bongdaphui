<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_football_field_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_middle"
        android:layout_marginTop="@dimen/spacing_middle"
        android:visibility="visible"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:background="@color/colorAccent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fs_20"
                android:layout_marginTop="@dimen/fs_10"
                android:layout_marginLeft="@dimen/fs_20"
                android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/item_football_field_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/ic_picture"
                    app:civ_shadow="true"
                    app:civ_background_color="@color/colorAccent"
                    app:civ_shadow_radius="0"
                    app:civ_border="true"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@android:color/white"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fs_20"
                    android:layout_marginEnd="@dimen/fs_20"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/fs_20">

                <TextView
                        android:id="@+id/item_football_field_name"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_16"
                        android:text="HCA"
                        android:lineSpacingExtra="@dimen/fs_3"
                        android:layout_marginBottom="@dimen/fs_5"
                        android:fontFamily="@font/axis_std_bold"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:paddingTop="@dimen/fs_3"
                        android:paddingBottom="@dimen/fs_3"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                    <ImageButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:background="@android:color/transparent"
                            android:tint="@android:color/white"
                            app:srcCompat="@drawable/ic_phone"/>

                    <TextView
                            android:id="@+id/item_football_field_phone"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/ts_14"
                            android:text="0988422495"
                            android:padding="@dimen/fs_5"
                            android:fontFamily="@font/axis_std_regular"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:paddingTop="@dimen/fs_3"
                        android:paddingBottom="@dimen/fs_3"
                        android:gravity="center_vertical"
                        android:layout_height="wrap_content">

                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/fs_10"
                            android:src="@drawable/ic_address_white"/>

                    <TextView
                            android:id="@+id/item_football_field_address"
                            android:layout_width="wrap_content"
                            android:textSize="@dimen/ts_14"
                            android:lineSpacingExtra="@dimen/fs_3"
                            android:text="Bình Thạnh"
                            android:fontFamily="@font/axis_std_regular"
                            android:textColor="@android:color/white"
                            android:layout_height="wrap_content"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_marginTop="@dimen/fs_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fs_110"
                android:orientation="horizontal"
                android:layout_marginEnd="@dimen/fs_20"
                android:layout_marginBottom="@dimen/fs_10"
                android:layout_marginLeft="@dimen/fs_110"
                android:layout_marginRight="@dimen/fs_20">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/item_football_field_amount"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:text="9"
                        android:fontFamily="@font/axis_std_regular"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_12"
                        android:text="Số lượng sân"
                        android:fontFamily="@font/axis_std_regular"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/item_football_field_price"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:text="400000"
                        android:fontFamily="@font/axis_std_regular"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_12"
                        android:text="Giá trung bình"
                        android:fontFamily="@font/axis_std_regular"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>