<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/item_field_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_medium"
        android:layout_marginLeft="@dimen/spacing_middle"
        android:layout_marginRight="@dimen/spacing_middle"
        android:layout_marginTop="@dimen/spacing_middle"
        android:visibility="visible"
        app:cardCornerRadius="5dp"
        app:cardElevation="2dp">

    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:orientation="vertical"
            android:background="@color/colorAccent"
            android:layout_width="match_parent"
            android:id="@+id/item_club_container"
            android:layout_height="wrap_content"
            tools:ignore="UnusedAttribute">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fs_20"
                android:layout_marginTop="@dimen/fs_10"
                android:layout_marginLeft="@dimen/fs_20"
                android:orientation="horizontal">

            <com.mikhaellopez.circularimageview.CircularImageView
                    android:id="@+id/item_club_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    app:srcCompat="@drawable/ic_picture"
                    app:civ_shadow="true"
                    app:civ_shadow_radius="0"
                    app:civ_background_color="@color/colorAccent"
                    app:civ_border="true"
                    app:civ_border_width="1dp"
                    app:civ_border_color="@android:color/white"/>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/fs_20"
                    android:layout_marginEnd="@dimen/fs_20"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical"
                    android:layout_marginLeft="@dimen/fs_20"
                    tools:ignore="RtlHardcoded">

                <TextView
                        android:id="@+id/item_club_name"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_16"
                        android:text="Brothers FC"
                        android:layout_marginBottom="@dimen/fs_5"
                        android:fontFamily="@font/axis_std_bold"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>
                <TextView
                        android:id="@+id/item_club_caption"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:text="Nguyễn Tấn Linh"
                        android:fontFamily="@font/axis_std_regular"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:id="@+id/item_club_area"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_14"
                        android:text="Bình Thạnh"
                        android:lineSpacingExtra="@dimen/fs_3"
                        android:fontFamily="@font/axis_std_regular"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginEnd="@dimen/fs_20"
                android:layout_marginLeft="@dimen/fs_20"
                android:layout_marginStart="@dimen/fs_20"
                android:layout_marginBottom="@dimen/fs_10"
                android:layout_marginRight="@dimen/fs_20">

            <ImageButton
                    android:id="@+id/frg_join_club_iv_phone"
                    android:layout_width="@dimen/fs_71"
                    android:layout_height="@dimen/spacing_xxlarge"
                    android:background="@android:color/transparent"
                    android:tint="@android:color/white"
                    app:srcCompat="@drawable/ic_phone"/>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_marginStart="@dimen/fs_20"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <TextView
                        android:id="@+id/item_club_phone"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/ts_14"
                        android:paddingTop="@dimen/fs_5"
                        android:paddingBottom="@dimen/fs_3"
                        android:text="+84"
                        android:fontFamily="@font/axis_std_bold"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_12"
                        android:text="Liên hệ"
                        android:fontFamily="@font/axis_std_regular"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                <TextView
                        android:id="@+id/item_club_amount_player"
                        android:layout_width="match_parent"
                        android:textSize="@dimen/ts_14"
                        android:paddingTop="@dimen/fs_5"
                        android:paddingBottom="@dimen/fs_3"
                        android:text=""
                        android:fontFamily="@font/axis_std_bold"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/ts_12"
                        android:text="Số cầu thủ"
                        android:fontFamily="@font/axis_std_regular"
                        android:textColor="@android:color/white"
                        android:layout_height="wrap_content"/>

            </LinearLayout>

        </LinearLayout>

        <TextView
                android:id="@+id/item_club_tv_add_schedule"
                android:layout_width="wrap_content"
                android:textSize="@dimen/ts_16"
                android:text="Thêm lịch thi đấu >>>"
                android:padding="@dimen/fs_10"
                android:layout_gravity="end"
                android:visibility="gone"
                android:layout_marginBottom="@dimen/fs_5"
                android:fontFamily="@font/axis_std_bold"
                android:textColor="@android:color/white"
                android:layout_height="wrap_content"/>
    </LinearLayout>
</android.support.v7.widget.CardView>