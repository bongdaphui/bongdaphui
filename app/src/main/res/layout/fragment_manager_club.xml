<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:layout_height="match_parent"
        android:focusable="true">

    <android.support.v7.widget.RecyclerView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/frg_manager_club_rcv"
            android:layout_width="match_parent"
            tools:listitem="@layout/item_club"
            android:visibility="gone"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_height="match_parent"/>

    <LinearLayout
            android:id="@+id/frg_manager_club_v_no_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:visibility="gone"
            android:orientation="vertical">

        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:text="Bạn không quản lý đội bóng nào"
                  android:textSize="@dimen/fs_16"
                  android:gravity="center_horizontal"
                  android:textColor="@color/c_2d2d2d"
                  tools:ignore="SpUsage"/>
        <TextView
                android:id="@+id/frg_manager_club_tv_input"
                style="@style/bt_single_c_accent"
                android:layout_gravity="center_horizontal"
                android:text="Thêm đội bóng"/>
    </LinearLayout>


</RelativeLayout>