<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/bg_blue_5_radius"
        android:elevation="@dimen/fs_5"
        android:id="@+id/item_manager_club_container"
        android:layout_margin="@dimen/fs_10"
        android:layout_height="wrap_content"
        tools:ignore="UnusedAttribute">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/fs_20"
            android:orientation="horizontal">

        <FrameLayout
                android:layout_width="@dimen/fs_71"
                android:background="@drawable/bg_oval_solid_transparent_border_white"
                android:layout_height="@dimen/fs_71">

            <ImageView
                    android:id="@+id/item_manager_club_image"
                    android:layout_width="@dimen/fs_70"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/fs_70"/>
        </FrameLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/fs_20"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="@dimen/fs_20"
                tools:ignore="RtlHardcoded">

            <TextView
                    android:id="@+id/item_manager_club_name"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_16"
                    android:text="Brothers FC"
                    android:layout_marginBottom="@dimen/fs_5"
                    android:fontFamily="@font/axis_std_bold"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>
            <TextView
                    android:id="@+id/item_manager_club_amount"
                    android:layout_width="wrap_content"
                    android:textSize="@dimen/ts_14"
                    android:layout_marginTop="@dimen/fs_5"
                    android:text="Thành viên: 14"
                    android:fontFamily="@font/axis_std_regular"
                    android:textColor="@android:color/white"
                    android:layout_height="wrap_content"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>