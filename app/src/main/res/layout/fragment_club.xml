<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@android:color/white"
        android:clickable="true"
        android:layout_height="match_parent"
        android:focusable="true">

    <android.support.v7.widget.CardView
            android:id="@+id/frg_club_cv_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_medium"
            android:layout_marginLeft="@dimen/spacing_middle"
            android:layout_marginRight="@dimen/spacing_middle"
            android:layout_marginTop="@dimen/spacing_medium"
            app:cardCornerRadius="2dp"
            android:visibility="gone"
            app:cardElevation="1dp">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/fs_46"
                android:orientation="horizontal">

            <Spinner
                    android:id="@+id/frg_club_sp_city"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:overlapAnchor="false"
                    tools:ignore="HardcodedText,UnusedAttribute"/>
            <View
                    android:layout_width="0.1dp"
                    android:layout_height="match_parent"
                    android:background="@color/c_2d2d2d"/>
            <Spinner
                    android:id="@+id/frg_club_sp_district"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="match_parent"
                    android:overlapAnchor="false"
                    tools:ignore="HardcodedText,UnusedAttribute"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.RecyclerView
            android:layout_below="@+id/frg_club_cv_spinner"
            android:id="@+id/frg_club_rcv"
            android:visibility="gone"
            android:layout_width="match_parent"
            tools:listitem="@layout/item_club"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            android:layout_height="match_parent"/>

    <include layout="@layout/view_empty"/>

    <android.support.design.widget.FloatingActionButton
            android:id="@+id/frg_club_fab"
            android:layout_width="wrap_content"
            android:src="@drawable/ic_plus"
            android:layout_alignParentEnd="true"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_margin="@dimen/fs_16"
            android:backgroundTint="@color/colorPrimaryDark"/>

</RelativeLayout>